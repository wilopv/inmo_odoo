<odoo>
    <data>
        <!-- Extiende el formulario de eventos para mostrar el inmueble -->
        <record id="view_calendar_event_form_inmo" model="ir.ui.view">
            <field name="name">calendar.event.form.inmo</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[last()]" position="after">
                    <group string="Visita de cliente a un inmueble">
                        <field name="inmueble_id" options="{'no_open': False, 'no_create': False}"/>
                        <field name="cliente_id"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Extiende la vista árbol de eventos para añadir el inmueble -->
        <record id="view_calendar_event_tree_inmo" model="ir.ui.view">
            <field name="name">calendar.event.tree.inmo</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="inmueble_id"/>
                    <field name="cliente_id"/>
                </xpath>
            </field>
        </record>

        <!-- Acción para concertar visita desde boton en inmuebles -->
        <record id="action_inmo_schedule_visit" model="ir.actions.act_window">
            <field name="name">Concertar visita</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="calendar.view_calendar_event_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
